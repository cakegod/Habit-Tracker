---
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" data-theme="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body class="flex h-screen w-screen flex-col items-center bg-base-100 p-4">
    <h1 class="self-start pb-6 text-2xl lg:text-3xl font-black">Habit Tracker</h1>
    <main
      class="grid w-full max-w-3xl grid-cols-2 gap-3 md:grid-cols-3 lg:grid-cols-4"
    >
      <slot />
    </main>
  </body>
</html>
